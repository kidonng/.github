[alias]
	br = branch
	ca = commit --amend
	ci = commit
	cl = clone
	co = checkout
	cp = cherry-pick
	di = diff -b
	fe = fetch
	lg = log --oneline --graph
	me = merge
	ps = push
	pu = pull
	rb = rebase
	rbi = rebase -i --committer-date-is-author-date
	re = restore
	rs = reset
	rt = remote
	sh = stash
	st = status
	sw = switch
	tl = rev-parse --show-toplevel
[core]
	autocrlf = input
    pager = delta
[credential "https://github.com"]
	helper = !gh auth git-credential
[delta]
	features = file-decoration
	hunk-header-style = omit
	# https://github.com/dandavison/delta/issues/895
	syntax-theme = OneHalfLight
[delta "file-decoration"]
	file-decoration-style = blue ol ul
[delta "no-file-decoration"]
	file-decoration-style = omit
[diff]
	algorithm = patience
	colorMoved = default
[fetch]
	prune = true
[pull]
	rebase = true
	ff = only
