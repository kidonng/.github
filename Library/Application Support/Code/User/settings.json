{
  "breadcrumbs.enabled": false,
  "customizeUI.titleBar": "inline",
  "diffEditor.renderSideBySide": false,
  "editor.bracketPairColorization.enabled": true,
  "editor.find.autoFindInSelection": "multiline",
  "editor.fontFamily": "JetBrains Mono, JetBrainsMono Nerd Font, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.lineNumbers": "off",
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.suggest.preview": true,
  "extensions.ignoreRecommendations": true,
  "files.autoGuessEncoding": true,
  "files.autoSave": "onFocusChange",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "formattingToggle.affects": ["formatOnPaste", "formatOnSave"],
  "git.autoStash": true,
  "git.enableSmartCommit": true,
  "git.showPushSuccessNotification": true,
  "gitlens.statusBar.enabled": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "npm.scriptExplorerAction": "run",
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "search.smartCase": true,
  "tabnine.experimentalAutoImports": true,
  "telemetry.enableTelemetry": false,
  "terminal.external.osxExec": "kitty.app",
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.macOptionIsMeta": true,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.titleMode": "sequence",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "update.showReleaseNotes": false,
  "vim.hlsearch": true,
  "window.autoDetectColorScheme": true,
  "window.titleBarStyle": "native",
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "[Tokyo Night Light]": {
      // https://github.com/enkia/tokyo-night-vscode-theme/pull/34
      "terminal.selectionBackground": "#d5d6db"
    }
  },
  "workbench.colorTheme": "Tokyo Night Light",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "Tokyo Night Storm",
  "workbench.preferredLightColorTheme": "Tokyo Night Light",
  "workbench.tree.renderIndentGuides": "none"
}
